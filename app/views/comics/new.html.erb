<main>
  <div class="container">
    <% if @comic.errors.any? %>
      <div class="row">
      　　<h3><%= @comic.errors.count %>errors prohibited this obj from being saved:</h3>
      </div>
      <div class="row">
      　　<ul>
      　　　　<% @comic.errors.full_messages.each do |message| %>
      　　　　<li><%= message %></li>
      　　　　<% end %>
      　　</ul>
      </div>
  　<% end %>
    　<div class="row">
      　　<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        　　　　<div class="new">
        　　　　　　　　<h1>新規投稿</h1>
       　　　　　　　　　　 <%= form_with model: @comic, local: true do |f|  %>
          　　　　　　<div class="form-group">
          　　　　　　　　　　<label for="book_title">タイトル</label>
          　　　　　　　　　　　　　　<div>
         　　　　　　　　　　　　　　　　　　　<%= f.text_area :title, rows:'1', cols: '60', id: "inputTitle" %>
          　　　　　　　　　　　　　　</div>
          　　　　　　</div>
          　　　　　　<div class="form-group">
          　　　　　　　　　　<label for="story">あらすじ・キーワード</label>
          　　　　　　　　　　　　　　<div>
          　　　　　　　　　　　　　　　　　　<%= f.text_area :story, rows:'3', cols: '60', id: "inputStory" %>
          　　　　　　　　　　　　　　</div>
          　　　　　　　</div>
          　　　　　　<div class="form-group">
          　　　　　　　　　　<label for="review">レビュー</label>
            　　　　　　　　　　　　<div>
            　　　　　　　　　　　　　　　　<%= f.text_area :review, rows:'3', cols: '60', id: "inputReview" %>
            　　　　　　　　　　　　</div>
          　　　　　　　</div>
          　　　　　　<div class="form-group">
          　　　　　　　　　　<%= f.submit "投稿", class: "btn btn-success" %>
          　　　　　　</div>
          
          　　　　　　<%= link_to 'Back', comics_path %>
        　　　　　　　　<% end %>
       　　　　　 </div>
      　　</div>
    　</div>
  </div>
</main>