<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
          <ul>
           <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>
        
        <%= form_with model:@user, local: true do |f| %>
          <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, id: "inputName" %>
          </div>
          <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image %>
          </div>
          <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, id: "inputIntroduction" %>
          </div>
          <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
