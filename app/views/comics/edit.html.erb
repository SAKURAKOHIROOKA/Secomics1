<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>投稿編集</h1>
        <% if @comic.errors.any? %>
          <h3><%= @comic.errors.count %>errors prohibited this obj from being saved:</h3>
          <ul>
          <% @comic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
        <% end %>
        
        <%= form_with model: @comic, local: true do |f|  %>
          <div class="form-group">
          <label for="comic_title">タイトル</label>
          <%= f.text_field :title, id: "comic_title" %>
          </div>
          <div class="form-group">
          <labrl for="story">Oあらすじ・キーワード</labrl>
          <%= f.text_area :story, id: "story" %>
          </div>
          <div class="form-group">
            <label for="review">レビュー</label>
            <%= f.text_area :review, id: "review" %>
          </div>
          <div class="form-group">
          <%= f.submit "編集", class: "btn btn-success" %>
          </div>
          <%= link_to 'Show', comic_path(@comic.id) %>
          <string>|</string>
          <%= link_to 'Back', comics_path %>
        <% end %>
      </div>
    </div>
  </div>
</main>