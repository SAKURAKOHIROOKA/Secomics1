<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <%= render 'sidebar/userinfo', user: @user, comic: @comic %>
      <div class='right col-md-8 offset-md-1'>
        <h2>Users</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>画像</th>
              <th>名前</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "default-image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
            <% end %>
          </thead>
          <tbody></tbody>
        </table>
        <div class="paginate">
          <%= paginate @users %>
        </div>
      </div>
    </div>
  </div>
</main>
