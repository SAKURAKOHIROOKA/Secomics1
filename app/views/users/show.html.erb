<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
       <%= render 'sidebar/userinfo', user: @user, comic: @comic %>
      <div class='col-md-8 offset-md-1'>
        <h2>Comics</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>あらすじ</th>
              <th>レビュー</th>
              <th colspan="4"></th>
            </tr>
            <% @comics.each do |comic_user| %>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "default-image.jpg" %>
                <% end %>
              </td>
              <td><%= link_to comic_user.title, comic_path(comic_user.id) %></td>
              <td><%= comic_user.story %></td>
              <td><%= comic_user.review %></td>
            </tr>
            <% end %>
          </thead>
          <tbody></tbody>
        </table>
        <div class="paginate">
          <%= paginate @comics %>
        </div>
      </div>
    </div>
  </div>
</main>